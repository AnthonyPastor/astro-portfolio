---
import ExperienceItem from "./ExperienceItem.astro";
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const EXPERIENCE = [
	i18n.experience.work_1,
	i18n.experience.work_2,
	i18n.experience.work_3,
];
---

<ol class='relative border-s border-gray-700 ml-3'>
	{
		EXPERIENCE.map((experience) => (
			<ExperienceItem
				at={i18n.experience.at}
				{...experience}
				description={[experience.description_1, experience.description_2]}
			/>
		))
	}
</ol>
