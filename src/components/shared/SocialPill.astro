---
interface Props {
	link: string;
	downloadName?: string;
}
const { link, downloadName } = Astro.props;
---

<a
	href={link}
	target='_blank'
	rel='noopener noreferrer'
	role='link'
	{...downloadName ? { download: downloadName } : {}}
	class='rounded-full border border-white/10 flex justify-center items-center gap-x-2 py-1 lg:py-2 px-2 lg:px-4 bg-white/5 hover:scale-110 hover:bg-white/10 transition text-xs lg:text-base'
>
	<slot />
</a>
