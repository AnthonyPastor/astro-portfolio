---
import { getI18N } from "@/i18n";

const navItems = [
	{
		label: "home",
		url: "/#top",
	},
	{
		label: "experience",
		url: "/#experience",
	},
	{
		label: "projects",
		url: "/#projects",
	},
	{
		label: "about-me",
		url: "/#about-me",
	},
	{
		label: "contact",
		url: "/#about-me",
	},
];

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<footer
	class='rounded-lg shadow bg-black/20 backdrop-blur-lg w-full xl:w-[1120px] mb-10 mt-24 mx-auto px-5'
>
	<div
		class='w-full mx-auto max-w-screen-xl md:flex md:items-center md:justify-between'
	>
		<span class='text-sm text-yellow-200/60 sm:text-center'
			>Â© 2024 <a href='https://anthony.pastor.dev' class='hover:underline'
				>Anthony Pastor</a
			>
		</span>
		<ul class='flex items-center gap-2 md:gap-6 mt-3 font-medium sm:mt-0'>
			{
				navItems.map((item) => (
					<a
						class='relative block px-2 py-2 transition hover:text-yellow-400 text-xs md:text-sm'
						aria-label={item.label}
						href={item.url}
					>
						{/* @ts-expect-error */}
						{i18n.menu[item.label]}
					</a>
				))
			}
		</ul>
	</div>
</footer>
